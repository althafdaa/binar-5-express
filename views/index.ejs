      <!-- CONTENT -->
      <main
        class="container-fluid text-white d-flex flex-column text-center justify-content-center"
      >
        <h1 class="intro-text mb-5">PLAY TRADITIONAL GAME</h1>
        <p class="fs-4 mb-5">Experience new traditional game play</p>
        <a href="/games">
          <button type="button" class="button-play">PLAY NOW</button>
        </a>
      </main>

      <div
        class="d-flex text-center text-white flex-column fw-bold main-next__section"
      >
        <span> <a class="link" href="#storypage"> THE STORY</a></span>
        <span
          ><a class="link" href="#storypage"
            ><i class="bi bi-arrow-down-square"></i></a
        ></span>
      </div>
    </section>

    <!-- STORYPAGE -->
    <section id="storypage">
      <div
        class="d-flex h-100 align-items-center justify-content-center storypage-container"
      >
        <div class="text-white story-text__container">
          <h3>What is so special ?</h3>
          <h1>THE GAMES</h1>
        </div>

        <!-- CAROUSEL -->
        <div class="carousel-container col-md-6">
          <div
            id="carouselExampleIndicators"
            class="carousel slide"
            data-bs-ride="carousel"
          >
            <button
              class="carousel-control-prev"
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide="prev"
            >
              <span
                class="carousel-control-prev-icon"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button
              class="carousel-control-next"
              type="button"
              data-bs-target="#carouselExampleIndicators"
              data-bs-slide="next"
            >
              <span
                class="carousel-control-next-icon"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Next</span>
            </button>
            <div class="carousel-indicators">
              <button
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="0"
                class="active"
                aria-current="true"
                aria-label="Slide 1"
              ></button>
              <button
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="1"
                aria-label="Slide 2"
              ></button>
              <button
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="2"
                aria-label="Slide 3"
              ></button>
              <button
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="3"
                aria-label="Slide 4"
              ></button>
              <button
                type="button"
                data-bs-target="#carouselExampleIndicators"
                data-bs-slide-to="4"
                aria-label="Slide 5"
              ></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active" data-bs-interval="1000">
                <img
                  src="assets/gambar resized.jpg "
                  class="d-block w-100"
                  alt="..."
                />
              </div>
              <div class="carousel-item" data-bs-interval="3000">
                <img
                  src="assets/gambar resized.jpg"
                  class="d-block w-100"
                  alt="..."
                />
              </div>
              <div class="carousel-item" data-bs-interval="3000">
                <img
                  src="assets/gambar resized.jpg"
                  class="d-block w-100"
                  alt="..."
                />
              </div>
              <div class="carousel-item" data-bs-interval="3000">
                <img
                  src="assets/gambar resized.jpg"
                  class="d-block w-100"
                  alt="..."
                />
              </div>
              <div class="carousel-item" data-bs-interval="3000">
                <img
                  src="assets/gambar resized.jpg"
                  class="d-block w-100"
                  alt="..."
                />
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- FEATURE -->
    <section class="d-flex" id="features">
      <div class="filler-feature"></div>
      <div class="feature-progress my-auto text-white">
        <div class="mb-5 feature-text__container">
          <h3>What is so special ?</h3>
          <h1>FEATURES</h1>
        </div>
        <ul class="prog-bar list-unstyled">
          <li class="list-1">
            <span>TRADITIONAL GAMES</span>
            <p>
              if you miss your childhood, we provide many traditional games here
            </p>
          </li>
          <li class="empty-list list-2"><span>GAME SUIT</span></li>
        </ul>
        <ul class="prog-bar list-unstyled">
          <li class="empty-list__x list-3"><span>TBD</span></li>
        </ul>
      </div>
    </section>

    <!-- REQUIREMENTS -->
    <section class="text-white p-5" id="sysreq">
      <h3 class="text-center mb-5">Can My Computer Run This ?</h3>
      <div class="sysreq-container m-lg-5">
        <h1 class="mb-5">SYSTEM<br />REQUIREMENT</h1>

        <table class="table table-bordered text-white">
          <tr>
            <td>
              <span>OS:</span>
              <p>Windows 7 64-bit only (No OSX support at this time)</p>
            </td>
            <td>
              <span>PROCESSOR:</span>
              <p>Intel Core 2 Duo @2.4 GHz or AMD Athlon X2 @2.8 GHz</p>
            </td>
          </tr>
          <tr>
            <td>
              <span>MEMORY:</span>
              <p>4 GB RAM</p>
            </td>
            <td>
              <span>STORAGE:</span>
              <p>8 GB available space</p>
            </td>
          </tr>
          <tr>
            <td class="graphic" colspan="2">
              <span>GRAPHICS</span>
              <p>
                NVIDIA GeForce GTX 660 2GB or AMD Radeon HD 7850 2GB DirectX11
                (Shader Model 5)
              </p>
            </td>
          </tr>
        </table>
      </div>
    </section>

    <!-- TOPSCORES -->
    <section
      class="d-flex justify-content-between align-items-center p-5"
      id="topscores"
    >
      <div class="p-lg-5 m-lg-5 score-text__wrapper">
